<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">新規コメント</h1>

        <%= form_for @comment do |f| %>

          <div class="form-group">
            <%= f.hidden_field :topic_id, value: @comment.topic_id %>
            <!-- <input value="<%= @comment.topic_id %>" type="hidden" name="comment[topic_id]" id="comment_topic_id" /> -->
            <%= f.label :body %>
            <%= f.text_area :body , class: 'form-control' %>
          </div>
          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>
